
  <div class="container">
    <h3 class="text-center my-4">Lista de Productos</h3>
    {{#if products }}
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>id</th>
          <th>titulo</th>
          <th>precio</th>
          <th>miniatura</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
          <tr>
            <th>
              <%= product.id %>
            </th>
            <td>
              <%= product.title %>
            </td>
            <td>
              <%= product.price %>
            </td>
            <td> <img src="<%= product.thumbnail %>" alt="Producto" height="60px">
            </td>
          </tr>
         {{/each}}
      </tbody>


    </table>
   
    {{else}}
      <h3 class="alert alert-danger">No se encontraron datos de productos</h3>
      {{/if}}
        <button type="button" class="btn btn-primary" onclick="window.location='/'">regresar</button>
  </div>
</body>

</html>